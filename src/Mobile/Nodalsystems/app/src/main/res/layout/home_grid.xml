<?xml version="1.0" encoding="utf-8"?>
<com.example.ranad.nodalsystems.usage.GridViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="top|center_vertical|center">

    <LinearLayout
        android:id="@+id/icon_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_icon"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/home-title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</com.example.ranad.nodalsystems.usage.GridViewItem>